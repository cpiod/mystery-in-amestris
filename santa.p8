--draw


function _draw()
 camx=p.x-60
 camy=p.y-60
 camera(camx,camy)
 cls(0)
 fillp(0)
	
	map()
	local done=false
	for n in all(npc) do
	 if not done and p.y<=n.y*8 then
	  done=true
	  local s=8
	  if(p.x!=p.ox or p.y!=p.oy) s+=flr((4*t())%4)
	 	spr(s,p.x,p.y-10,1,2,p.f)
	 end
	 spr(n.id,n.x*8,n.y*8-10,1,2,n.f!=nil)
	end
	
	if(mode==2)	prt_dial(d,a)
end

